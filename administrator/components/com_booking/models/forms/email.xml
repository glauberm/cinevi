<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
        <field name="subject" type="text" label="Title" class="inputbox input-xxlarge" size="80" required="true" />
        <field type="radio" name="usage" label="USE_TEMPLATE_FOR" class="btn-group" default="0">
            <option value="0">EMAIL_ONLY</option>
            <option value="1">SMS_ONLY</option>
            <option value="2">EMAIL_AND_SMS</option>
        </field>
        <field type="radio" name="mode" default="1" label="EMAIL_FORMAT" class="btn-group"
            description="HLP_E-MAIL FORMAT">
            <option value="0">Plain text</option>
            <option value="1">HTML</option>
        </field>
        <field name="body" type="editor" class="inputbox" label="EMAIL_BODY" buttons="false" filter="JComponentHelper::filterText" width="500" />
        <field name="sms" type="textarea" class="inputbox" label="SMS_BODY" cols="60" rows="20" />
        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
    </fieldset>
</form>