<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="administrator/components/com_booking/elements">
        <field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
        <field name="title" type="text" label="JGLOBAL_TITLE" class="input-xxlarge" size="40" required="true" />
        <field name="color" type="text" default="" label="COLOR" class="color {pickerPosition:'top',required:false} input-mini" size="7" />
        <field name="show" type="radio" label="SHOW" class="btn-group">
        	<option value="0">TOOLTIP</option>
        	<option value="1">LABEL</option>
        </field>        
        <field name="date_up" type="bookingcalendar" label="DATE_UP" required="true" timeselect="false" />
        <field name="date_down" type="bookingcalendar" label="DATE_DOWN" required="true" timeselect="false" />
        <field name="monday" type="checkbox" value="1" default="1" label="MONDAY" />
        <field name="tuesday" type="checkbox" value="1" default="1" label="TUESDAY" />
        <field name="wednesday" type="checkbox" value="1" default="1" label="WEDNESDAY" />
        <field name="thursday" type="checkbox" value="1" default="1" label="THURSDAY" />
        <field name="friday" type="checkbox" value="1" default="1" label="FRIDAY" />
        <field name="saturday" type="checkbox" value="1" default="1" label="SATURDAY" />
        <field name="sunday" type="checkbox" value="1" default="1" label="SUNDAY" />
        <field name="time_up" type="text" label="TIME_UP" required="true" default="00:00:00" size="8" class="input-mini" />
        <field name="time_down" type="text" label="TIME_DOWN" required="true" default="00:00:00" size="8" class="input-mini" />
        <field name="text" type="editor" class="inputbox" label="JGLOBAL_FULL_TEXT" buttons="false" required="false" filter="JComponentHelper::filterText" />
        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
    </fieldset>
</form>