<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site">
    <name>ARTIO Booking Search</name>
    <author>ARTIO s.r.o.</author>
    <creationDate>2012-06-15</creationDate>
    <authorEmail>info@artio.cz</authorEmail>
    <authorUrl>http://www.artio.cz</authorUrl>
    <version>2.0.0</version>
    <description>BOOKING_SEARCH_DESC</description>
    <setting ordering="1" position="left" published="1"/>
    <languages folder="language">
        <language tag="cs-CZ">cs-CZ/cs-CZ.mod_booking_search.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_booking_search.ini</language>        
        <language tag="en-GB">en-GB/en-GB.mod_booking_search.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.mod_booking_search.ini</language>        
        <language tag="nl-NL">nl-NL/nl-NL.mod_booking_search.ini</language>
        <language tag="sl-SI">sl-SI/sl-SI.mod_booking_search.ini</language>
    </languages>
    <files>
        <folder>assets</folder>
        <folder>tmpl</folder>
        <file>index.html</file>
        <filename module="mod_booking_search">mod_booking_search.php</filename>
    </files>
    <config>
        <fields name="params" addfieldpath="/administrator/components/com_booking/models/fields">
            <fieldset name="basic">               
                <field name="itemid" type="menuitem" label="ITEMID" description="ITEMID_DESC" />
                <field name="category" type="parent" label="CATEGORY" description="CATEGORY_DESC" /> 
                <field name="featured" type="list" default="0" label="FEATURED" description="FEATURED_DESC">
                    <option value="0">SEARCH_FEATURED_AND_UNFEATURED_ITEM_AS_WELL</option>
                    <option value="1">SEARCH_FEATURED_ITEM_ONLY</option>
                    <option value="2">SHOW_FEATURED_ONLY_OPTION</option>
                </field> 
                <field name="date_range" type="radio" class="btn-group" default="1" label="DATE_RANGE" description="DATE_RANGE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="time_range" type="radio" class="btn-group" default="0" label="TIME_RANGE" description="TIME_RANGE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="price_range" type="radio" class="btn-group" default="0" label="PRICE_RANGE" description="PRICE_RANGE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="template_area" type="radio" class="btn-group" default="1" label="TEMPLATE_AREA" description="TEMPLATE_AREA_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="required_capacity" type="radio" class="btn-group" default="0" label="REQUIRED_CAPACITY" description="REQUIRED_CAPACITY_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="locations" type="radio" class="btn-group" default="0" label="LOCATIONS" description="LOCATIONS_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="properties" type="radio" class="btn-group" default="0" label="PROPERTIES" description="PROPERTIES_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="login" type="radio" class="btn-group" default="0" label="LOGIN" description="LOGIN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="login_itemid" type="menuitem" label="LOGIN_ITEMID" description="LOGIN_ITEMID_DESC" />
                <field name="submit" type="text" default="Search" label="SUBMIT" description="SUBMIT_DESC" />
                <field name="submit_label" type="text" default="" label="SUBMIT_LABEL" description="SUBMIT_LABEL_DESC" />
                <field name="login_label" type="text" default="" label="LOGIN_LABEL" description="LOGIN_LABEL_DESC" />
                <field name="reset" type="radio" class="btn-group" default="0" label="RESET" description="RESET_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>