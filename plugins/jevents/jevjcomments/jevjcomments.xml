<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="jevents" method="upgrade">
	<name>JEvents - JComments</name>
	<author>Geraint Edwards</author>
	<creationDate>November 2013</creationDate>
	<copyright>(C) 2009-14 GWE Systems Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl>www.gwesystems.com</authorUrl>
	<version>3.1.2</version>
	<description>JEvents - Enables JComments for Event and Location Descriptions</description>
	<languages folder="language">
            <language tag="en-GB">en-GB.plg_jevents_jevjcomments.ini</language>
	</languages>
	<files>
		<filename plugin="jevjcomments">jevjcomments.php</filename>
		<filename component="com_jcomments/plugins">plugins/com_jevents.plugin.php</filename>
		<filename component="com_jcomments/plugins">plugins/com_jevlocations.plugin.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="whenenabled"
					type="list"
					default="jevents"
					multiple="multiple"
					label="PLG_JEVENTS_JEVCOMMENTS_WHENENABLED_LBL"
					description="PLG_JEVENTS_JEVCOMMENTS_WHENENABLED_DESC"
				>
					<option value="jevents">PLG_JEVENTS_JEVCOMMENTS_WHENENABLED_JEVENTS</option>
					<option value="jevlocations">PLG_JEVENTS_JEVCOMMENTS_WHENENABLED_JEVLOCATIONS</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
