<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site">
    <name>ARTIO Booking Customer Info</name>
    <author>ARTIO s.r.o.</author>
    <creationDate>2012-02-20</creationDate>
    <authorEmail>info@artio.cz</authorEmail>
    <authorUrl>http://www.artio.cz</authorUrl>
    <version>2.0.0</version>
    <description>Display module with info about logged customer and links to customers profile,
        cutomers user account and list of customers reservations. If no customer logged display links
        to login or new registration.</description>
    <setting ordering="1" position="top" published="1"/>
    <languages folder="language">
        <language tag="cs-CZ">cs-CZ/cs-CZ.mod_booking_customer_info.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_booking_customer_info.ini</language>        
        <language tag="en-GB">en-GB/en-GB.mod_booking_customer_info.ini</language>
        <language tag="es-ES">es-ES/es-ES.mod_booking_customer_info.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.mod_booking_customer_info.ini</language>        
        <language tag="it-IT">it-IT/it-IT.mod_booking_customer_info.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.mod_booking_customer_info.ini</language>
        <language tag="sl-SI">sl-SI/sl-SI.mod_booking_customer_info.ini</language>
    </languages>
    <files>
        <folder>tmpl</folder>
        <file>index.html</file>
        <filename module="mod_booking_customer_info">mod_booking_customer_info.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>