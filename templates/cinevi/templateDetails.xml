<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>cinevi</name>
	<version>1.0</version>
	<creationDate>15/08/2015</creationDate>
	<author>Glauber Mota</author>
	<authorEmail>glaubernm@gmail.com</authorEmail>
	<authorUrl>https://github.com/glauberm/</authorUrl>
	<copyright>MIT</copyright>
	<description>Template do Site do Departamento de Cinema e Vídeo da Universidade Federal Fluminense.</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>login</position>
		<position>busca</position>
		<position>menu</position>
		<position>baixo</position>
		<position>cima</position>
		<position>direita</position>
		<position>direita2</position>
		<position>rodape</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#006886"
					label="Cor principal"
					description="Cor principal do site" />

				<field name="templateBackgroundColor" class="" type="color" default="#93979A"
					label="Cor do fundo"
					description="Cor do fundo do site" />

				<field name="logoFile" class="" type="media" default=""
					label="Logo"
					description="Imagem da logo do site" />

				<field name="sitetitle"  type="text" default=""
					label="Título"
					description="Título do site"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="Descrição"
					description="Descrição do site"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="Carregar fonte"
					description="Carregar fontes diferentes para o título"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="Nome da fonte"
					description="Nome da fonte para os títulos" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="Container fluido"
					description="Container de página toda para o site"
				>
					<option value="1">Fluido</option>
					<option value="0">Estático</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
