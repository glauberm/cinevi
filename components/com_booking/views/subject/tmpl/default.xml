<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="BOOKABLE_ITEM_DETAIL"/>
    <fields name="request">
        <fieldset name="request" addfieldpath="/administrator/components/com_booking/elements">
            <field name="id" type="subject" use_type="1" default="0" label="SELECT_OBJECT" description="" />
        </fieldset>
    </fields>
    <fields name="params">
        <fieldset name="basic" label="ITEM_DETAIL_OPTION">
            <field type="radio" name="multiple_reservations" class="btn-group"
                label="MULTIPLE_RESERVATIONS" description="HLP_MULTIPLE_RESERVATIONS">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
			<field type="radio" name="button_position" default="" class="btn-group" label="BUTTON_POSITION" description="HLP_BUTTON_POSITION">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">POSITION_BEFORE_CALENDAR</option>
				<option value="1">POSITION_AFTER_CALENDAR</option>
			</field>            
            <field type="radio" name="cart_popup" class="btn-group"
                label="CART_POPUP" description="HLP_CART_POPUP">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="radio" name="show_capacity" class="btn-group"
                label="SHOW_CAPACITY" description="HLP_SHOW_CAPACITY">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="radio" name="display_image_subject_detail" label="SHOW_IMAGE" class="btn-group" description="HLP_SHOW_IMAGE">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="display_thumbs_subject_detail_width" type="text" label="IMAGE_WIDTH" description="HLP_IMAGE_WIDTH" size="10" />
            <field name="display_thumbs_subject_detail_height" type="text" label="IMAGE_HEIGHT" description="HLP_IMAGE_HEIGHT" size="10" />
            <field type="radio" name="display_gallery_subject_detail" label="SHOW_PHOTOGALLERY" class="btn-group" description="HLP_SHOW_PHOTOGALLERY">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="list" name="display_gallery_subject_position" label="PHOTOGALLERY_POSITION" description="HLP_PHOTOGALLERY_POSITION">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="above">ABOVE</option>
                <option value="below">BELOW</option>
            </field>
            <field type="list" name="display_gallery_subject_style" label="PHOTOGALLERY_STYLE" description="HLP_PHOTOGALLERY_STYLE">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="slideshow">SLIDESHOW</option>
                <option value="squares">SQUARES</option>
            </field>
            <field name="gallery_slideshow_duration" type="text" label="GALLERY_SLIDESHOW_DURATION" description="HLP_GALLERY_SLIDESHOW_DURATION" size="10" />
            <field name="gallery_slideshow_shift" type="text" label="GALLERY_SLIDESHOW_SHIFT" description="HLP_GALLERY_SLIDESHOW_SHIFT" size="10" />
            <field name="display_gallery_thumbs_subject_detail_width" type="text" label="GALLERY_THUMB_WIDTH" description="HLP_GALLERY_THUMB_WIDTH" size="10" />
            <field name="display_gallery_thumbs_subject_detail_height" type="text" label="GALLERY_THUMB_HEIGHT" description="HLP_GALLERY_THUMB_HEIGHT" size="10" />
            <field name="display_gallery_preview_subject_detail_width" type="text" label="GALLERY_PREVIEW_WIDTH" description="HLP_GALLERY_PREVIEW_WIDTH" size="10" />
            <field name="display_gallery_preview_subject_detail_height" type="text" label="GALLERY_PREVIEW_HEIGHT" description="HLP_GALLERY_PREVIEW_HEIGHT" size="10" />
            <field type="list" name="display_properties_subject_detail" label="SHOW_PROPERTIES" description="HLP_SHOW_PROPERTIES">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">Hidden</option>
                <option value="1">AS_TABLE_WITH_TEXTS</option>
                <option value="2">AS_ICON_LIST</option>
                <option value="3">AS_TEXT_LIST</option>
            </field>
            <field type="radio" name="display_subject_back" class="btn-group" label="DISPLAY_BACK_LINK" description="HLP_DISPLAY_BACK_LINK">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="list" name="display_subject_text_position" label="TEXT_POSITION" description="HLP_TEXT_POSITION">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="below_image">BELOW_IMAGE</option>
                <option value="below_properties">BELOW_PROPERTIES</option>
            </field>
            <field type="list" name="prices_layout" label="PRICES_LAYOUT" description="HLP_PRICES_LAYOUT">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">Hidden</option>
                <option value="detailed_list">DETAILED_LIST</option>
                <option value="brief_legend">BRIEF_LEGEND</option>
            </field>
          	<field type="radio" name="show_permanent_volume_discount" class="btn-group" label="SHOW_PERMANENT_VOLUME_DISCOUNT" >
          		<option value="">JGLOBAL_USE_GLOBAL</option>
            	<option value="0">JNO</option>
            	<option value="1">JYES</option>
        	</field>
        	<field type="radio" name="show_early_booking_discount" class="btn-group" label="SHOW_EARLY_BOOKING_DISCOUNT">
        		<option value="">JGLOBAL_USE_GLOBAL</option>
            	<option value="0">JNO</option>
            	<option value="1">JYES</option>
        	</field>
        </fieldset>
    </fields>
</metadata>